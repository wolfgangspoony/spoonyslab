datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(cuid())
  name      String    @default("")
  email     String    @unique @default("")
  password  String
  isAdmin   Boolean   @default(false)
  createdAt DateTime? @default("1970-01-01T00:00:00.000Z")
}

model Song {
  id                           String      @id @default(cuid())
  title                        String      @default("")
  price                        Float
  thumbnail_filesize           Int?
  thumbnail_extension          String?
  thumbnail_width              Int?
  thumbnail_height             Int?
  thumbnail_id                 String?
  songPreview_filesize         Int?
  songPreview_filename         String?
  createdAt                    DateTime?   @default("1970-01-01T00:00:00.000Z")
  from_SongsPage_featuredSongs SongsPage[] @relation("SongsPage_featuredSongs")
}

model HomePage {
  id                       Int     @id
  splash_filesize          Int?
  splash_extension         String?
  splash_width             Int?
  splash_height            Int?
  splash_id                String?
  splashPortrait_filesize  Int?
  splashPortrait_extension String?
  splashPortrait_width     Int?
  splashPortrait_height    Int?
  splashPortrait_id        String?
}

model SongsPage {
  id             Int    @id
  header         String @default("")
  featuredHeader String @default("")
  featuredSongs  Song[] @relation("SongsPage_featuredSongs")
}

model AboutPage {
  id      Int    @id
  content String @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
}
