datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(cuid())
  name      String    @default("")
  email     String    @unique @default("")
  password  String
  isAdmin   Boolean   @default(false)
  createdAt DateTime? @default("1970-01-01T00:00:00.000Z")
}

model Song {
  id                           String      @id @default(cuid())
  title                        String      @default("")
  datePosted                   String      @default("")
  thumbnail_filesize           Int?
  thumbnail_extension          String?
  thumbnail_width              Int?
  thumbnail_height             Int?
  thumbnail_id                 String?
  songPreview_filesize         Int?
  songPreview_filename         String?
  createdAt                    DateTime?   @default("1970-01-01T00:00:00.000Z")
  from_SongsPage_featuredSongs SongsPage[] @relation("SongsPage_featuredSongs")
}

model SongsPage {
  id                       Int     @id
  textBlock                String  @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  profilePicture_filesize  Int?
  profilePicture_extension String?
  profilePicture_width     Int?
  profilePicture_height    Int?
  profilePicture_id        String?
  featuredHeader           String  @default("")
  featuredSongs            Song[]  @relation("SongsPage_featuredSongs")
}

model AboutPage {
  id      Int    @id
  content String @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
}
